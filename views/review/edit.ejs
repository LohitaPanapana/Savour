<% include ../partials/header %>

<div class="container">
    <div class="row my-5 d-flex justify-content-center align-items-center">
        <div class="col-8">
            <div class="main p-5">
                <h2 class="text-center mb-3">Edit comment</h2>
                <form action="/restaurants/<%= restaurant_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="review[name]" value="<%= review.name %>">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="review[title]" value="<%= review.title %>">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="review[rating]" value="<%= review.rating %>" min= "0.0" max="5.0" step="0.1">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="review[content]" rows="5" ><%= review.content %></textarea>
                    </div>
                    <button class="btn btn-info mr-2">Save</button>
                    <a class="btn btn-danger" href="/restaurants/<%= restaurant_id %>">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>