<% include ../partials/header %>

<div class="container">
    <div class="row my-5 d-flex justify-content-center align-items-center">
        <div class="col-8">
            <div class="main p-5">
                <h2 class="text-center mb-3">Review for <%= restaurant.name %></h2>
                <form action="/restaurants/<%= restaurant._id %>/reviews" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="review[title]" id="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="review[rating]" id="rating" placeholder="0.0" min= "0.0" max="5.0" step="0.1">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="review[content]" rows="5" id="content">Your review will help other to make better choices</textarea>
                    </div>
                    <button class="btn btn-info mr-2">Submit</button>
                    <a class="btn btn-danger" href="/restaurants/<%= restaurant._id %>">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>